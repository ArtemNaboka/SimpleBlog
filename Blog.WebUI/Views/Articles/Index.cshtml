@model Blog.WebUI.ViewModels.ArticleViewModels.ArticlesListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Articles</h2>

@if (Model.Articles.Any())
{

    foreach (var article in Model.Articles)
    {
        @Html.Partial("_ArticlePartial", article)
    }
}
else
{
    <h3>There are no articles yet</h3>
}

@section Vote
{
    @(!Model.UserHasVoted 
        ? Html.Partial("_VoteFormPartial", Model.Voice) 
          : Html.Partial("_VoteResultsPartial", Model.VoteResults))
    
    <link rel="stylesheet" href="~/Content/vote.css"/>
}

@section Scripts
{
    <script src="~/Scripts/vote.js"></script>
}