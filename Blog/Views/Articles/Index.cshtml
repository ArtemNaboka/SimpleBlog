@model Blog.ViewModels.ArticlesListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Articles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (Model.Articles.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Articles.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articles.First().PublishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articles.First().Text)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Articles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>There are no articles yet</h3>
}